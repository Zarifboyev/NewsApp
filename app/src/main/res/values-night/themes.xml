<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Primary color applied to the Toolbar and Status Bar -->
        <item name="colorPrimary">@color/md_theme_dark_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_dark_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_dark_onPrimary</item>

        <!-- Dynamic colors -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Define custom text appearance for the Toolbar title -->
    <style name="TextAppearance.Collapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/newyork</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Define custom Toolbar style -->
    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom Toolbar primary style -->
    <style name="ThemeOverlay.Material3.Toolbar.Primary" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorSurface">@color/md_theme_dark_primary</item>
        <item name="colorOnSurface">@color/md_theme_dark_onPrimary</item>
    </style>
</resources>
