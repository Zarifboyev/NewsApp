<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/containerMain">

    <fragment
        android:id="@+id/HomeScreen"
        android:name="com.example.newsapp.presentation.screen.HomeScreen"
        android:label="Home Page"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_HomeScreen_to_InfoScreen"
            app:destination="@id/InfoScreen" />
    </fragment>

    <fragment
        android:id="@+id/InfoScreen"
        android:name="com.example.newsapp.presentation.screen.InfoScreen"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_edit">
        <action
            android:id="@+id/action_InfoScreen_to_profileScreen"
            app:destination="@id/profileScreen" />
    </fragment>
    <fragment
        android:id="@+id/profileScreen"
        android:name="com.example.newsapp.presentation.screen.ProfileScreen"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/containerMain"
        android:name="com.example.newsapp.presentation.screen.ContainerMain"
        android:label="container_main"
        tools:layout="@layout/container_main" >
        <action
            android:id="@+id/action_containerMain_to_HomeScreen"
            app:destination="@id/HomeScreen" />
        <action
            android:id="@+id/action_containerMain_to_InfoScreen"
            app:destination="@id/InfoScreen" />
        <action
            android:id="@+id/action_containerMain_to_profileScreen"
            app:destination="@id/profileScreen" />
    </fragment>

</navigation>
